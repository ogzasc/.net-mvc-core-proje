
@model IEnumerable<prjModel.Models.film>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";

}



<br />
<br />


<div class="border p-4 bg-white">

    <div class="row">

        <div class="col-9">
            <h2 class="text-info">FİLMLER</h2>
        </div>
        
        <div class="col-3  text-right">
            <a asp-action="Update_Insert" class="btn btn-info form-control">Film Ekle</a>
        </div>
    </div>
    
    <div class="row">

        
        

    </div>
    <br />
    <div>

        @if(Model.Count()>0){
            <table class="table table-striped border">
                <tr class="table-secondary">

                    <th>Film Adı</th>
                    <th>Yapım Yılı</th>
                    <th></th>
                    

                </tr>
                
                @foreach (var item in Model)
                {

                    <tr>
                        <td>
                            @item.FilmAd
                        </td>
                        <td>
                            @item.FilmYapimYil
                        </td>
                        

                        <td>

                            <a class="btn btn-primary text-white" asp-action="Update_Insert"  asp-route-Id="@item.Id">Düzenle</a>
                            <a class="btn btn-danger text-white" asp-action="Sil" asp-route-Id="@item.Id">Sil</a>

                        </td>
                    </tr>

                }


            </table>
        }

        else {<p>LİSTELENECEK HERHANGİ BİR FİLM YOK </p>}

    </div>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="js/scripts.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
<script src="assets/demo/chart-area-demo.js"></script>
<script src="assets/demo/chart-bar-demo.js"></script>
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
<script src="js/datatables-simple-demo.js"></script>

